--max-requests=0&amp;nbsp;--mysql-db=dbtest&amp;nbsp;--mysql-user=[USER]&amp;nbsp;--mysql-password=[PASSWORD]&amp;nbsp;run&lt;br&gt;
&lt;br&gt;
