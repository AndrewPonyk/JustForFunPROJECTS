  <question id="1_0_1_4_1_0_0_8:1" type="2">
    <questiontext>&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Bootstrap&amp;nbsp;jobs&amp;nbsp;&amp;nbsp;in&amp;nbsp;Play&amp;nbsp;1&amp;nbsp;,&amp;nbsp;describe&amp;nbsp;.&lt;br&gt;
&amp;nbsp;&amp;nbsp;</questiontext>
    <questionanswer>'Bootstrap'&amp;nbsp;means&amp;nbsp;-&amp;nbsp;'load&amp;nbsp;on&amp;nbsp;start'&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Bootstrap&amp;nbsp;jobs&amp;nbsp;are&amp;nbsp;executed&amp;nbsp;by&amp;nbsp;Play&amp;nbsp;at&amp;nbsp;application&amp;nbsp;start&amp;nbsp;time.&amp;nbsp;&lt;br&gt;
