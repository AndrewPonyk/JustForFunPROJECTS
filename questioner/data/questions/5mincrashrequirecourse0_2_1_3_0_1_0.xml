  <question id="0_2_1_3_0_1_0:2" type="2">
    <questiontext>&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Create&amp;nbsp;RequireJS&amp;nbsp;module&amp;nbsp;application,&amp;nbsp;create&amp;nbsp;two&amp;nbsp;modules&amp;nbsp;and&amp;nbsp;use&amp;nbsp;them&amp;nbsp;on&amp;nbsp;&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;main&amp;nbsp;page.&lt;br&gt;
(for&amp;nbsp;example&amp;nbsp;create&amp;nbsp;files&amp;nbsp;&lt;projdir&gt;/modules/module1.js,&amp;nbsp;&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&lt;projdir&gt;/modules/module2.js,&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&lt;projdir&gt;/main.js,&amp;nbsp;&lt;projdir&gt;/index.html)&lt;br&gt;
&amp;nbsp;&amp;nbsp;</questiontext>
    <questionanswer>1)&amp;nbsp;Create&amp;nbsp;two&amp;nbsp;modules&amp;nbsp;(in&amp;nbsp;this&amp;nbsp;example&amp;nbsp;alertOne.js&amp;nbsp;and&amp;nbsp;alertTwo.js&amp;nbsp;files)&lt;br&gt;
&lt;br&gt;
///&lt;projdir&gt;/alertOne.js&lt;br&gt;
define(function(){&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;console.log(arguments);&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;function&amp;nbsp;shout&amp;nbsp;(){&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;alert("one!")&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;}&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;return&amp;nbsp;{&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;shout:shout&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;}&lt;br&gt;
})&lt;br&gt;
&lt;br&gt;
///&lt;projdir&gt;/alertTwo.js&lt;br&gt;
define(function(){&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;function&amp;nbsp;shout(){&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;alert("two!")&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;};&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;return&amp;nbsp;{&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;shout:&amp;nbsp;shout,&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;}&lt;br&gt;
});&lt;br&gt;
&lt;br&gt;
&lt;br&gt;
2)&amp;nbsp;Main&amp;nbsp;file&lt;br&gt;
///&amp;nbsp;5minmain.js&lt;br&gt;
define(["modules/alertOne","modules/alertTwo"],&amp;nbsp;function(alertOne,&amp;nbsp;alertTwo){&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;alertOne.shout();&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;alertTwo.shout();&lt;br&gt;
});&lt;br&gt;
&lt;br&gt;
