  <question id="1_0_1_4_1_0_0_2:12" type="2">
    <questiontext>&lt;br&gt;
&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;Interceptions&amp;nbsp;&amp;nbsp;,&amp;nbsp;describe&amp;nbsp;.&amp;nbsp;(@Before&amp;nbsp;,&amp;nbsp;@After&amp;nbsp;,&amp;nbsp;@Catch&amp;nbsp;,&amp;nbsp;@Finally&amp;nbsp;,&amp;nbsp;@With&amp;nbsp;&amp;nbsp;&lt;br&gt;
