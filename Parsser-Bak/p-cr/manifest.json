{
  "manifest_version": 3,
  "name": "Text Area Selector",
  "version": "1.0",
  "description": "Select all text in editable areas using Ctrl+Alt+Q",

  "permissions": [
    "activeTab"
  ],

  "host_permissions": [
    "http://localhost:9999/*"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}